<h1>Books</h1>

<% @books.each do |book| %>

  <th>Title</th>
  <th>Body</th>
  <span><%= book.title %></span>
  
<% end %>

<h3>New book</h3>
<%= form_with model: @book, url:'/books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>
